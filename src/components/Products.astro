---
import products from "@data/products.json";
import type { Product } from "@models/product.model";

function getProducts(): Product[] {
    return products;
}
---

<section>
    <h2 class="christmas-text christmas-text--secondary">Productos</h2>

    <div class="products-container">
        {
            getProducts().map((product) => (
                <article class="product-container">
                    <h3 class="christmas-text">{product.title}</h3>

                    <div class="product-content">
                        {product.video ? (
                            <video
                                src={product.video}
                                muted
                                loop
                                class="product-video"
                                preload="none"
                                data-autoplay="true"
                            />
                        ) : (
                            <img
                                src={product.images[0]}
                                alt={product.title}
                                class="product-video"
                                loading="lazy"
                            />
                        )}

                        <div class="product-info">
                            <p>{product.description}</p>
                            <a
                                href={product.url}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                Ver producto
                            </a>
                        </div>
                    </div>

                    <div class="product-images">
                        {product.images.map((image) => (
                            <div class="product-image">
                                <img
                                    src={image}
                                    alt={product.title}
                                    loading="lazy"
                                />
                            </div>
                        ))}
                    </div>
                </article>
            ))
        }
    </div>
</section>

<script>
    // Intersection Observer para lazy loading de videos
    const videos = document.querySelectorAll("video[data-autoplay]");

    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                const video = entry.target as HTMLVideoElement;

                if (entry.isIntersecting) {
                    if (video.paused) {
                        video.play();
                    }
                } else {
                    if (!video.paused) {
                        video.pause();
                    }
                }
            });
        },
        {
            threshold: 0.5,
        }
    );

    videos.forEach((video) => observer.observe(video));
</script>

<style lang="scss">
    h2 {
        text-align: center;
        font-size: clamp(2rem, 8vw, 6rem);
        margin: 100px 0;
    }

    .products-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 100px;
    }

    .product-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        width: 100%;

        h3 {
            font-size: clamp(1.5rem, 6vw, 4rem);
            margin: 10px 0;
        }
    }

    .product-content {
        position: relative;
        width: 100%;
        height: fit-content;
        border-radius: 24px;
        box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
        box-sizing: border-box;
        overflow: hidden;
        display: flex;

        &:hover .product-info {
            opacity: 1;
        }
    }

    .product-video {
        width: 100%;
        height: auto;
        max-height: 800px;
        object-fit: contain;
        background: black;
    }

    .product-info {
        position: absolute;
        box-sizing: border-box;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(8px);
        color: white;
        padding: 30px;
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 20px;
        text-align: center;

        p {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            font-size: clamp(1rem, 2vw, 1.25rem);
            line-height: 1.6;
            margin: 0;
            max-width: 600px;
        }

        a {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: white;
            color: black;
            padding: 12px 32px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: clamp(0.9rem, 1.5vw, 1.1rem);
            transition: transform 0.2s ease, box-shadow 0.2s ease;

            &:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
            }
        }
    }

    .product-images {
        display: flex;
        gap: 10px;
        flex-direction: row;
        width: 100%;
        overflow: hidden;
    }

    .product-image {
        flex: 1;
        background-color: black;
        display: flex;
        overflow: hidden;
        border-radius: 24px;
        box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
        padding: 10px;
        max-height: 200px;

        img {
            width: 100%;
            height: auto;
            object-fit: contain;
        }
    }
</style>
